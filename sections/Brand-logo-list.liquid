<style>
.section-{{ section.id }} *{
  color: {{ section.settings.color }};
}
.brand-logo-list {
    padding: 1.5rem 5.5rem;
}
.brand-logo-list ul {
    padding-left: 0;
    margin: 0;
    display: flex;
    width: 100%;
    list-style-type: none;
}  
.brand-logo-list li {
  width: 17%;
  padding: 0 2rem;
  line-height: 1.3;
  text-align: center;
  position: relative;
}
.brand-logo-list li:after {
  position: absolute;
  content: "";
  border-right: 2px solid #0000001a;
  height: 80%;
  right: 0;
  width: 1px;
  top: 50%;
  transform: translateY(-50%);
}
.brand-logo-list li:last-child:after {
  display: none;
}
.brand-logo-list ul li * {
    text-decoration: none;
    font-weight: 700;
    font-size: 14px;
    margin: 0;
}

@media(max-width: 1199px){
  .brand-logo-list {
    padding: 1.5rem;
  }
  .brand-logo-list ul li * {
    font-size: 12px;
  }
}

@media(max-width:767px){
  .brand-logo-list ul {
    flex-wrap: wrap;
    {% comment %} flex-wrap: nowrap;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch; {% endcomment %}
  }
  .brand-logo-list ul::-webkit-scrollbar {
    display: none;
  }
  .brand-logo-list li {
    width: 50%;
    padding: 1rem;
    flex: 0 0 50%;
  }
  .brand-logo-list {
      padding: 1rem 0;
  }
  .brand-logo-list li:after {
    display: none;
  }
}
</style>

<div class="brand-logo-list section-{{ section.id }}" style="background: {{ section.settings.bg-color }}">
  <ul>
    {% for block in section.blocks %}
    <li>
      {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}">
      {% endif %}
      <img src="{{ block.settings.image | img_url: 'master' }}" loading="lazy" alt="brand {{ forloop.index }}" >
      <p>
        {{ block.settings.text }}
      </p>
      {% if block.settings.link != blank %}
        </a>
      {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Brand Logo List",
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "Add background",
      "default": "#ECECEC"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Add text color",
      "default": "#000"
    }
  ],
  "max_blocks": 6,
  "blocks": [
     {
       "name": "Brand Logo List",
       "type": "image",
       "settings": [
         {
      "type": "html",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Add Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
       ]
     }
  ],
  "presets": [
    {
      "name": "Brand Logo List",
      "category": "image"
    }
  ]
}
{% endschema %} 





