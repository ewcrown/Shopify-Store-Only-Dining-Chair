          {% endif %}
        </div>
      </div>
      <div class="bottom-img-text">
        {% if section.settings['image-6'] != blank %}
          <div class="b-img">
            <img src="{{ section.settings.image-6 | img_url: "50px" }}" loading="lazy" alt="no repay">
          </div>
        {% endif %}
        <div class="b-contant">
          {% if section.settings['bhead-3'] != blank %}
