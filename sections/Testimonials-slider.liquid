<style>
.section-{{ section.id }} *{
  color: {{ section.settings.color }};
}
.testimonial-slider .swiper {
  max-width: 100rem;
  margin: auto;
  padding-left: 3rem;
}
.textt {
  padding-left: 2.3rem;
  max-width: 64rem;
}
.testimonial-slider .slide-content {
    display: flex;
    align-items: center;
}
.testimonial-slider .para p {
  margin: 0;
}
.testimonial-slider .head {
    font-size: 30px;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;
}
.testimonial-slider .sub-head {
  font-size: 18px;
  font-weight: bold;
  margin-top: 5px;
}
.testimonial-slider .para {
  font-size: 18px;
  margin: 1rem 0 1.5rem;
  line-height: 1.6;
  max-width: 97%;
}
.testimonial-slider .swiper-button-next, .testimonial-slider .swiper-rtl .swiper-button-prev {
  right: 5rem;
}
.testimonial-slider .swiper-button-prev, .testimonial-slider .swiper-rtl .swiper-button-next {
  left: 5rem;
}
.testimonial-slider .name {
    font-size: 14px;
    font-weight: bold;
}
.testimonial-slider {
  position: relative;
  padding: 5rem;
}

@media(max-width: 1199px){
  .testimonial-slider .swiper {
    padding-left: 0;
}
.testimonial-slider .head {
    font-size: 16px;
}
.testimonial-slider .sub-head {
  font-size: 12px;
  margin-top: 0;
}
.testimonial-slider .para {
    font-size: 14px;
}
.testimonial-slider .name {
    font-size: 14px;
}
.testimonial-slider .swiper-button-next, .testimonial-slider .swiper-rtl .swiper-button-prev {
  right: 2rem;
}
.testimonial-slider .swiper-button-prev, .testimonial-slider .swiper-rtl .swiper-button-next {
  left: 2rem;
}
.textt {
  padding-left: 1rem;
  max-width: 65%;
}
}

@media(max-width:767px){
  .testimonial-slider {
    padding: 3rem 2rem;
  }
  .textt {
    padding-left: 1rem;
    max-width: 60%;
  }
  .testimonial-slider .slide-content {
    flex-wrap: wrap;
  }
  .nz-img {
    max-width: 35%;
  }
  .testimonial-slider .para, .testimonial-slider .name {
    max-width: 100%;
    width: 100%;
  }
  .testimonial-slider .name {
    text-align: center;
  }
  .testimonial-slider .swiper-button-next, .testimonial-slider .swiper-rtl .swiper-button-prev {
    right: 7rem;
    top: auto;
    bottom: 1rem;
    width: 4rem;
    height: 4rem;
  }
  .testimonial-slider .swiper-button-prev, .testimonial-slider .swiper-rtl .swiper-button-next {
    left: 7rem;
    top: auto;
    bottom: 1rem;
    width: 4rem;
    height: 4rem;
  }
  .testimonial-slider .swiper {
    padding-bottom: 3rem;
  }
  .nz-inner-img {
    max-width: 83%;
}
}
</style>

<div class="testimonial-slider section-{{ section.id }}" style="background: {{ section.settings.bg }}">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="slidee swiper-slide">
          <div class="slide-content">
            <div class="nz-img">
              {% if block.settings.image-1 != blank %}
              <img src="{{ block.settings.image-1 | img_url: 'master' }}" loading="lazy" alt="testimonial 1">
              {% endif %}
            </div> 
            <div class="textt">
              <div class="head">
                {% if block.settings.head != blank %}
                {{ block.settings.head }}
                {% endif %}
              </div>
              <div class="nz-inner-img">
                {% if block.settings.image-2 != blank %}
                <img src="{{ block.settings.image-2 | img_url: 'master' }}" loading="lazy" alt="testimonial 2">
                {% endif %}
                  </div>
              <div class="sub-head">
              {% if block.settings.sub-head != blank %}
              {{ block.settings.sub-head }}
              {% endif %}
              </div>
              <div class="para desktop">
              {% if block.settings.para != blank %}
              {{ block.settings.para }}
              {% endif %}
              </div>
              <div class="name desktop">
              {% if block.settings.name != blank %}
              {{ block.settings.name }}
              {% endif %}
              </div>
            </div>
            <div class="para mobile">
              {% if block.settings.para != blank %}
              {{ block.settings.para }}
              {% endif %}
              </div>
              <div class="name mobile">
              {% if block.settings.name != blank %}
              {{ block.settings.name }}
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="swiper-custom-button swiper-button-next">
    <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 44 44" fill="none">
        <g filter="url(#filter0_d_1_551)">
