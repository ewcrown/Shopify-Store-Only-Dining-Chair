<modal-opener
    class="shipping-popup-button product-popup-modal__opener no-js-hidden quick-add-hidden"
    data-modal="#shipping-popup"
  >
    <button
      id="ProductPopup-{{ block.id }}"
      class="product-popup-modal__button link"
      type="button"
      aria-haspopup="dialog"
    >
        <img src="{{ section.settings.shipping-image | img_url: 'master' }}" alt="Shipping" loading="lazy">
        {{ section.settings.shipping-text }}
    </button>
</modal-opener>

<modal-dialog id="shipping-popup" class="product-popup-modal">
    <div
      role="dialog"
      aria-modal="true"
      class="product-popup-modal__content"
      tabindex="-1"
    >
      <button
        id="ModalClose-{{ block.id }}"
        type="button"
        class="product-popup-modal__toggle"
        aria-label="{{ 'accessibility.close' | t }}"
      >
        {% render 'icon-close' %}
      </button>
      <div class="product-popup-modal__content-info">
        {% if section.settings.shipping-title != blank %}
          <h1 class="h2">{{ section.settings.shipping-title }}</h1>
        {% endif %}
        {% render 'product-shipping', variant: variant, product: product, shop: shop %}
      </div>
    </div>
</modal-dialog>